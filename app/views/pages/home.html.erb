<!-- Navigation -->
<nav class="navbar navbar-light bg-light static-top">
  <div class="container">
    <a class="navbar-brand" href="#">My Foodie List</a>
    <div id='login_btn' class="btn btn-primary">Log In</div>
  </div>
</nav>
<div class="banner" style="background-image: url('https://images.unsplash.com/photo-1528698827591-e19ccd7bc23d?ixid=MnwxMjA3fDB8MHxzZWFyY2h8Mjl8fHJlc3RhdXJhbnQlMjBzaG9wJTIwZnJvbnR8ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=800&q=60')">
  <div class="container">
    <div class="wrap">
      <%= simple_form_for :search, url: '/results', method: :get do |f| %>
        <div class="d-flex search-form-control form-group">
          <input class="form-control" type="text" name="query" id="query" placeholder="Search for restaurants in your favorite area of town" />
          <button type="submit" class="searchButton">
            <i class="fas fa-search "></i>
          </button>
        </div>
        <% if flash[:alert].present? %>
          <p class="alert alert-main"><%= alert %></p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
