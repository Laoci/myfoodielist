<%= render "shared/navsearchbar" %>
<h1 style="color:#0abab5;text-align:center;margin-top:8px;">Your List Dashboard</h1>
    <div class="container">
      <div class="row card-list">

      <% @lists.each do |list| %>
        <div class="card col-lg-4">
          <%= link_to user_list_path(@user, list) do %>
          <div class="list-square dashboard-card">
            <h2><%= list.name %></h2>
          </div>
          <% end %>
          <div class="card-list-infos">
            <div>
              <h3>Tags:</h3>
              <p><strong><%= list.restaurants.length %></strong> Restaurants</p>
            </div>
          </div>
        </div>
      <% end %>
      <div class="card col-lg-4">
        <%= link_to results_path do %>
        <div class="list-square-new" style='margin-top:20px; padding-right:10px'>
          <h2>Add new</h2>
          <h2><i class="fas fa-plus"></i></h2>
        </div>
        <% end %>
        <div class="card-list-infos">
          <div>
            <h3>Go search for more restaurants!</h3>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
