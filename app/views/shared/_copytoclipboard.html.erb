<!-- Copy-to-clipboard card -->
<div class="copy-to-clipboard ml-2 shadow bg-white rounded" data-controller="clipboard" data-clipboard-feedback-text-value="Copied!">
  <h2>Wanna share this list?</h2>
  <input class="form-control" data-clipboard-target="input" type="text" value="<%= request.original_url %>" readonly>
  <button id="copy-button" class="btn border btn-flat mt-3" data-action="click->clipboard#copy">Copy to Clipboard</button>
</div>
