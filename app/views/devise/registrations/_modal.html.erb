<!-- Modal Bootstrap 4 -->
<div
    class="modal fade"
    id="exampleModalA"
    tabindex="-1"
    aria-labelledby="exampleModalALabel"
    aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalALabel">Sign up</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <%= render "devise/registrations/signup", resource: User.new %>
            </div>
        </div>
    </div>
</div>
